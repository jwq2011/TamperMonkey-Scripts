{
  "manifest_version": 3,
  "name": "Jira 活动日志全屏助手（可配置版）",
  "version": "1.1",
  "description": "为 Jira 活动日志添加全屏切换功能，支持自定义域名和快捷键。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Jira 全屏助手配置"
  },
  "commands": {
    "toggle-fullscreen": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "切换活动日志全屏模式"
    }
  }
}
